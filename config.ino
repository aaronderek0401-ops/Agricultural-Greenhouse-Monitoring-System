// =============================================================================
// 传感器引脚定义
// =============================================================================

// DHT22 温湿度传感器
#define DHT_PIN 2
#define DHT_TYPE DHT22

// MH-Z19B CO2传感器 (软件串口)
#define CO2_RX_PIN 16  // 连接到MH-Z19B的TX
#define CO2_TX_PIN 17  // 连接到MH-Z19B的RX

// 土壤湿度传感器
#define SOIL_MOISTURE_PIN A0  // 模拟输入引脚
#define SOIL_POWER_PIN 7      // 电源控制引脚

// BH1750 光照传感器 (I2C)
// SDA - GPIO 21 (默认)
// SCL - GPIO 22 (默认)

// =============================================================================
// 设备控制引脚定义
// =============================================================================

// 继电器控制引脚
#define PUMP_PIN 5       // 水泵继电器
#define FAN_PIN 6        // 风扇继电器
#define LIGHT_PIN 8      // 补光灯继电器

// =============================================================================
// LCD显示屏引脚定义 (已在主文件中定义)
// =============================================================================
// SCLK - GPIO 3
// MOSI - GPIO 4
// DC   - GPIO 12
// RST  - GPIO 13
// BLK  - GPIO 14

// =============================================================================
// 传感器阈值配置
// =============================================================================

// 可以在这里修改传感器的正常范围阈值
struct SensorThresholds {
  float tempMin = 18.0;     // 最低温度 (°C)
  float tempMax = 28.0;     // 最高温度 (°C)
  float humidityMin = 60.0; // 最低湿度 (%)
  float humidityMax = 80.0; // 最高湿度 (%)
  float soilMin = 40.0;     // 最低土壤湿度 (%)
  float soilMax = 70.0;     // 最高土壤湿度 (%)
  int co2Max = 1000;        // CO2最大值 (ppm)
  float lightMin = 1000.0;  // 最低光照强度 (lux)
};
